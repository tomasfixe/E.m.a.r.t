@page
@model LoginModel

@{
    // Define o título da página para "Log in"
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>  <!-- Cabeçalho principal da página -->

<div class="row">
    <div class="col-md-4">
        <section>
            <!-- Formulário para login, método POST -->
            <form id="account" method="post">
                <h2>Faça log in com o seu email.</h2>
                <hr />
                <!-- Sumário das validações, mostra erros do modelo -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Campo para o email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <!-- Mensagem de validação específica do email -->
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Campo para a password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <!-- Mensagem de validação específica da password -->
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Botão de submissão do formulário -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <!-- Link para página de registo de novo utilizador -->
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registar novo utilizador</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <!-- Partial view que inclui scripts para validação client-side -->
    <partial name="_ValidationScriptsPartial" />
}
