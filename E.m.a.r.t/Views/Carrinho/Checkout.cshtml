@model CarrinhoViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (Model.Fotografias.Any())
{
    <form asp-action="FinalizarCompra" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Nome:</label>
            <input type="text" name="Nome" class="form-control" value="@Model.Nome" readonly />
        </div>
        <div class="form-group">
            <label>NIF:</label>
            <input type="text" name="NIF" class="form-control" value="@Model.NIF" required />
        </div>

        <h4>Fotografias no carrinho</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Imagem</th>
                    <th>Título</th>
                    <th>Preço</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var foto in Model.Fotografias)
                {
                    <tr>
                        <td>
                            <img src="~/imagens/@foto.Ficheiro" alt="@foto.Titulo" style="width: 100px; height: auto;" />
                        </td>
                        <td>@foto.Titulo</td>
                        <td>@foto.Preco.ToString("C")</td>
                        <td>
                            <form asp-action="RemoverDoCarrinho" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@foto.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">Finalizar Compra</button>
    </form>
}
else
{
    <p>O seu carrinho está vazio.</p>
}

<hr />

<hr />
<h4>Compras anteriores</h4>
<div id="comprasAnteriores">
    @if (ViewBag.Compras != null)
    {
        foreach (var compra in ViewBag.Compras as List<Compras>)
        {
            <div class="mb-3 border rounded p-3">
                <p><strong>Data:</strong> @compra.Data.ToShortDateString()</p>
                <p><strong>Estado:</strong> @compra.Estado</p>
                <ul>
                    @foreach (var f in compra.ListaFotografiasCompradas)
                    {
                        <li>@f.Titulo - @f.Preco.ToString("C")</li>
                    }
                </ul>
            </div>
        }
    }
    else
    {
        <p>Sem compras registadas.</p>
    }
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form[asp-action="FinalizarCompra"]');
            if (!form) {
                console.error("Form FinalizarCompra não encontrado");
                return;
            }

            form.addEventListener('submit', function(e) {
                e.preventDefault(); // Impede o submit normal, evita recarregar página

                const nome = form.querySelector('input[name="Nome"]').value;
                const nif = form.querySelector('input[name="NIF"]').value;

                const token = form.querySelector('input[name="__RequestVerificationToken"]').value;

                fetch('@Url.Action("FinalizarCompra", "Carrinho")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ Nome: nome, NIF: nif })
                })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        // Limpa a tabela do carrinho
                        const tbody = document.querySelector('table tbody');
                        tbody.innerHTML = '';

                        // Atualiza as compras
                        const comprasDiv = document.getElementById('comprasAnteriores');
                        let html = '';
                        data.compras.forEach(compra => {
                            html += `<div class="mb-3 border rounded p-3">
                                        <p><strong>Data:</strong> ${compra.Data}</p>
                                        <p><strong>Estado:</strong> ${compra.Estado}</p>
                                        <ul>`;
                            compra.Fotografias.forEach(f => {
                                html += `<li>${f.Titulo} - ${f.Preco}</li>`;
                            });
                            html += `</ul></div>`;
                        });
                        comprasDiv.innerHTML = html;
                    } else {
                        alert(data.message);
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Erro ao finalizar compra.');
                });
            });
        });
    </script>
}