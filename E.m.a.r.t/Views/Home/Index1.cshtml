.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 2rem;
}

.card {
    display: flex;
    flex-direction: column;
}

.card img {
    width: 100%;
    height: auto;
    border-radius: 4px;
}

.card-content {
    margin-top: 1rem;
}

.card-content h2 {
    margin: 0 0 0.5rem;
}

.card-content p {
    margin: 0 0 1rem;
    color: #666;
}

.btn {
    display: inline-block;
    background-color: #000;
    color: #fff;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
}
