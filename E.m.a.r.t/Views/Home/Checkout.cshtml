@model CarrinhoViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Carrinho de Compras";
}

<link rel="stylesheet" href="~/css/Checkout.css" />

<h1>Carrinho de Compras</h1>

<form method="post" asp-action="FinalizarCompra">
    <h2>Os seus dados</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <label>Email</label>
            <input class="form-control" name="Nome" value="@Model.Nome" required />
        </div>
    </div>

    <h2>Fotografias no Carrinho</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagem</th>
                <th>Título</th>
                <th>Preço</th>
                <th>Remover</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var foto in Model.Fotografias)
            {
                <tr>
                    <td><img src="~/imagens/@foto.Ficheiro" alt="@foto.Titulo" width="100" /></td>
                    <td>@foto.Titulo</td>
                    <td>@foto.Preco.ToString("C")</td>
                    <td>
                        <button type="submit" name="removerId" value="@foto.Id" class="btn btn-danger btn-sm">X</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.Fotografias.Sum(f => f.Preco).ToString("C")</h3>

    <button type="submit" class="btn btn-success">Finalizar Compra</button>
</form>

<h2>Fotografias Compradas</h2>
@{
    var utilizador = Context.User.Identity?.Name;
    var compras = ViewBag.Compras as List<Compras>;
}

@if (ViewBag.Compras != null && ViewBag.Compras.Count > 0)
{
    <h2>Fotografias Compradas</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Título</th>
                <th>Imagem</th>
                <th>Data da Compra</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compra in ViewBag.Compras)
            {
                foreach (var foto in compra.ListaFotografiasCompradas)
                {
                    <tr>
                        <td>@foto.Titulo</td>
                        <td>
                            <img src="~/imagens/@foto.Ficheiro" alt="@foto.Titulo" width="120" />
                        </td>
                        <td>@compra.Data.ToShortDateString()</td>
                        <td>@compra.Estado</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p>Não há fotografias compradas ainda.</p>
}
