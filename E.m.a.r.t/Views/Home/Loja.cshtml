@model E.m.a.r.t.Models.LojaViewModel // Define o modelo usado na página — contém coleções, fotografias soltas e relacionadas

@{
    Layout = "_Layout"; // Define o layout da página
}

@section Estilos {
    <!-- Adiciona o CSS específico para esta página com controlo de versão -->
    <link rel="stylesheet" href="~/css/Loja.css" asp-append-version="true" />
}

<div class="product-page container">

    <!-- Percorre todas as coleções e mostra as respetivas fotografias -->
    @foreach (var colecao in Model.Colecoes)
    {
        <h2 class="mt-5">@colecao.Nome</h2> <!-- Título da coleção -->
        <div class="row">
            @foreach (var foto in colecao.ListaFotografias) // Percorre as fotos da coleção
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Imagem da fotografia -->
                        <img src="~/imagens/@foto.Ficheiro" class="card-img-top" alt="@foto.Titulo" />
                        <div class="card-body">
                            <h5 class="card-title">@foto.Titulo</h5> <!-- Título da fotografia -->
                            <p class="card-text text-muted">@foto.Data.ToString("dd/MM/yyyy")</p> <!-- Data formatada -->
                            <p class="card-text fw-bold">@foto.Preco.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</p> <!-- Preço formatado em português -->
                            <p class="card-text">@foto.Descricao</p> <!-- Descrição da fotografia -->
                            <!-- Formulário para adicionar a fotografia ao carrinho -->
                            <form asp-controller="Home" asp-action="Adicionar" method="post">
                                <input type="hidden" name="id" value="@foto.Id" />
                                <button type="submit" class="btn btn-primary w-100">Adicionar ao Carrinho</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Fotografias que não pertencem a nenhuma coleção -->
    @if (Model.FotografiasSemColecao.Any())
    {
        <h2 class="mt-5">Outras Fotografias</h2>
        <div class="row">
            @foreach (var foto in Model.FotografiasSemColecao)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/imagens/@foto.Ficheiro" class="card-img-top" alt="@foto.Titulo" />
                        <div class="card-body">
                            <h5 class="card-title">@foto.Titulo</h5>
                            <p class="card-text text-muted">@foto.Data.ToString("dd/MM/yyyy")</p>
                            <p class="card-text fw-bold">@foto.Preco.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</p>
                            <p class="card-text">@foto.Descricao</p>

                            <form asp-controller="Home" asp-action="Adicionar" method="post">
                                <input type="hidden" name="id" value="@foto.Id" />
                                <button type="submit" class="btn btn-primary w-100">Adicionar ao Carrinho</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Fotografias relacionadas (ex: sugestões ou produtos recomendados) -->
    @if (ViewBag.Relacionadas != null)
    {
        <h2 class="mt-5 mb-3">Outras Fotografias</h2>
        <div class="related-products">
            @foreach (var foto in ViewBag.Relacionadas as List<E.m.a.r.t.Models.Fotografias>)
            {
                <div class="related-item">
                    <!-- Link para a página de detalhes da fotografia -->
                    <a asp-action="Details" asp-route-id="@foto.Id">
                        <img src="~/imagens/@foto.Ficheiro" class="card-img-top" alt="@foto.Titulo" />
                        <h4>@foto.Titulo</h4>
                        <p>@foto.Preco.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</p>
                    </a>
                </div>
            }
        </div>
    }
</div>
