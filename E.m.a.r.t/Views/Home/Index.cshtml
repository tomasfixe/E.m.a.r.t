@model IEnumerable<E.m.a.r.t.Models.Fotografias>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Página Inicial";
}

<!-- Swiper CSS oficial -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<!-- Seu CSS customizado -->
<link rel="stylesheet" href="~/css/Index.css" />

<main class="grid">
    <div class="card">
        <div class="swiper card-swiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <img src="@Url.Content("~/3.jpg")" alt="Imagem 1" />
                </div>
                <div class="swiper-slide">
                    <img src="@Url.Content("~/5.jpg")" alt="Imagem 2" />
                </div>
                <div class="swiper-slide">
                    <img src="@Url.Content("~/6.jpg")" alt="Imagem 3" />
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>

        <div class="card-content">
            <h2>Coleção 1</h2>
            <p>A subheading for this section, as long or as short as you like</p>
            <a href="#" class="btn">Ver</a>
        </div>
    </div>

    <div class="card">
        <div class="swiper card-swiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <img src="@Url.Content("~/3.jpg")" alt="Imagem A" />
                </div>
                <div class="swiper-slide">
                    <img src="@Url.Content("~/5.jpg")" alt="Imagem B" />
                </div>
                <div class="swiper-slide">
                    <img src="@Url.Content("~/6.jpg")" alt="Imagem C" />
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>

        <div class="card-content">
            <h2>Coleção 2</h2>
            <p>A subheading for this section, as long or as short as you like</p>
            <a href="#" class="btn">Ver</a>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        window.onload = function () {
            const swipers = document.querySelectorAll('.card-swiper');
            swipers.forEach(swiperEl => {
                new Swiper(swiperEl, {
                    loop: true,
                    autoplay: {
                        delay: 3000,
                        disableOnInteraction: false
                    },
                    pagination: {
                        el: swiperEl.querySelector('.swiper-pagination'),
                        clickable: true
                    }
                });
            });
        };
    </script>
}
