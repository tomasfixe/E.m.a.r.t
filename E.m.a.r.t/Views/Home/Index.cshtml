@model IEnumerable<E.m.a.r.t.Models.Colecao>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Página Inicial";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<link rel="stylesheet" href="~/css/Index.css" />

<main class="grid">
    @foreach (var colecao in Model)
    {
        var fotos = colecao.ListaFotografias.Take(3).ToList();

        if (fotos.Count == 0) continue;

        <div class="card">
            <div class="swiper card-swiper">
                <div class="swiper-wrapper">
                    @foreach (var foto in fotos)
                    {
                        <div class="swiper-slide">
                            <img src="~/imagens/@foto.Ficheiro" alt="@foto.Titulo" />
                        </div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>

            <div class="card-content">
                <h2>@colecao.Nome</h2>
                <p>@colecao.Descricao</p>
                <a href="@Url.Action("Loja", "Home")" class="btn">Ver</a>
            </div>
        </div>
    }
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        window.onload = function () {
            const swipers = document.querySelectorAll('.card-swiper');
            swipers.forEach(swiperEl => {
                new Swiper(swiperEl, {
                    loop: true,
                    autoplay: {
                        delay: 3000,
                        disableOnInteraction: false
                    },
                    pagination: {
                        el: swiperEl.querySelector('.swiper-pagination'),
                        clickable: true
                    }
                });
            });
        };
    </script>
}